<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="1dp"
    >
    <!-- <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardElevation="5dp"
         app:cardCornerRadius="3dp"

         >
     </android.support.v7.widget.CardView>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/selected_overlay_grid"
        >
        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/radio_button_tick_tick"
            android:id="@+id/photo_tick"
            />-->

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/ImageView01"
            android:maxLines="1"
            android:layout_gravity="bottom"
            android:textStyle="bold|italic"
            android:visibility="visible"
            />
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/video_symbol"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/video_symbol"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/gif"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/gif_symbol"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/picture"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/jpg_symbol"
        android:visibility="gone"
        />

</RelativeLayout>
